using Gtk 4.0;

template $TaskManagerView: ScrolledWindow {
  ColumnView columnview_processes {
    hexpand: true;
    vexpand: true;
    show-column-separators: true;
  }
}

Box actions {
  spacing: 6;

  Button btn_update {
    tooltip-text: _("Refresh");
    icon-name: "view-refresh-symbolic";
  }

  Button btn_kill {
    tooltip-text: _("Stop process");
    icon-name: "process-stop-symbolic";
  }
}
